<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collaps_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/window_bg"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/toolbar_layout_bg"
            app:expandedTitleMarginBottom="16dp"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleTextAppearance="?android:attr/textAppearanceMedium"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@color/toolbar_layout_bg"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/title_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:transitionName="sharedImg"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/list_selector"
                android:fitsSystemWindows="true"
                app:layout_anchor="@id/appBarLayout" />

            <LinearLayout
                android:id="@+id/desc_view"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal"
                app:layout_anchor="@id/appBarLayout"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    app:cardBackgroundColor="@color/toolbar_layout_bg"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/anime_img"
                        android:background="@drawable/loading"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/region"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/year"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tag"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/state"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/operation"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/down"
                            android:text="下载"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/baseline_down_white_48dp"
                            android:layout_marginRight="20dp"
                            android:layout_gravity="center"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/open"
                            android:text="访问"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/baseline_open_in_new_white_48dp"
                            android:layout_gravity="center" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:minHeight="?attr/actionBarSize"
                style="@style/ToolbarStyle"
                app:layout_collapseMode="pin" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/baseline_favorite_border_white_48dp"
        android:visibility="gone"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom|right" />

    <my.project.silisili.custom.MySwipeRefreshLayout
        android:id="@+id/mSwipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:id="@+id/desc_layout"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/text_color_primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="简介" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/desc"
                    android:textColor="@color/text_color_primary"
                    android:lineSpacingExtra="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
                <!-- 剧集视图 -->
                <LinearLayout
                    android:id="@+id/play_layout"
                    android:visibility="gone"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="@color/text_color_primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="选集">
                    </androidx.appcompat.widget.AppCompatTextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/details_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:clipToPadding="false"
                        android:fadingEdge="none"
                        android:paddingBottom="5dp"/>
                    <RelativeLayout
                        android:id="@+id/open_drama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="4dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/drama"
                            android:textColor="@color/colorAccent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="展开全部" />
                        <ImageView
                            android:id="@+id/down_img"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@id/drama"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_keyboard_arrow_down_white_48dp"
                            android:tint="@color/jd_bg"
                            android:scaleType="centerInside" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- 推荐视图 -->
                <LinearLayout
                    android:id="@+id/recommend_layout"
                    android:visibility="gone"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="@color/text_color_primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="相关推荐">
                    </androidx.appcompat.widget.AppCompatTextView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recommend_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:clipToPadding="false"
                        android:fadingEdge="none"
                        android:paddingBottom="5dp"/>
                </LinearLayout>

                <!-- 错误视图 -->
                <RelativeLayout
                    android:id="@+id/error_bg"
                    style="@style/bg"
                    android:visibility="gone"
                    android:background="@color/window_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/error_msg"
                        android:layout_margin="8dp"
                        android:background="@drawable/parsing_error_bg"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:lineSpacingExtra="10dp"
                        android:textColor="#333"/>
                    <!--android:background="#f4f5f7"-->
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </my.project.silisili.custom.MySwipeRefreshLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_anchor="@id/mSwipe"
        app:layout_anchorGravity="bottom"
        android:background="@color/translucent"
        android:id="@+id/msg">
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>